<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
    table {
    border-collapse: collapse;
    width: 100%;
}
thead,th{
    position: sticky;
    top: 0;
}
th, td {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: left;
    font-size: small;
}
th {
    background-color: #f2f2f2;
}

</style>
<body>
    <header>
        <%-include('_header')%>
    </header>
    <div>
        <div class="searchBar">
            <input class="checkItems" type="radio" name="searchType" id="search_id" onchange="changeInputs()"> &nbsp;&nbsp;<b>Search By Receipt No</b>
            <input type="radio" name="searchType" id="search_name" onchange="changeInputs()" checked> &nbsp;&nbsp;<b>Search By Date</b>
            <input type="text" name="" id="searchValue">
            <b>Start Date : </b><input type="date" name="" id="startDate">
            <b>End date : </b><input type="date" name="" id="endDate">
            <input type="submit" value="Search" onclick="getReceipts()">
        </div>
        <div class="receiptsTable">
            <table>
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Date</th>
                        <th>Address</th>
                        <th>Get Receipt</th>
                    </tr>
                </thead>
                <tbody id="receiptsTableBody">
                    <%for(let i=0;i<0;i++){%>
                        <tr>
                            <td>${++itemsCount}</td>
                            <td>${medicine}</td>
                            <td>${dosage}</td>
                            <td>${when}</td>
                            <td>${frequency}</td>
                            <td>${duration}</td>
                            
                        </tr>
                    <%}%>
                </tbody>
            </table>
        </div>
        <div></div>
    </div>
    <script src="/js/findReceipt.js"></script>
</body>
</html>